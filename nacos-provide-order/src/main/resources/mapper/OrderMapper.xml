<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.order.dao.OrderDao">

    <select id="selectById" resultType="com.order.model.Order">
        select
            id,
            sn,
            num,
            price,
            create_time
        from t_order
        where id = #{id,jdbcType=BIGINT}
    </select>

    <insert id="insert" parameterType="com.order.model.Order" useGeneratedKeys="true" keyProperty="id">
        insert into t_order (id,sn,num,price,create_time)
        values (#{id,jdbcType=BIGINT}, #{sn,jdbcType=VARCHAR},  #{num,jdbcType=DECIMAL},
                #{price,jdbcType=DECIMAL}, #{createTime,jdbcType=TIMESTAMP})
    </insert>

    <update id="update" parameterType="com.order.model.Order">
        update t_order
        set
            sn = #{sn,jdbcType=VARCHAR},
            num = #{num,jdbcType=DECIMAL},
            price = #{price,jdbcType=DECIMAL},
            create_time = #{createTime,jdbcType=TIMESTAMP}
        where id = #{id,jdbcType=BIGINT}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        delete from t_order
        where id = #{id,jdbcType=BIGINT}
    </delete>
</mapper>